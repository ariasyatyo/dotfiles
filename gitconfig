[user]
	name = satoru matsumoto
	email = matsumoto.satoru@aainc.co.jp
[color]
	ui = auto

[mergetool]
	keepBackup = true

[core]
	editor = vim
	excludesfile = ~/.gitignore

[alias]
    cl = clone
	st = status
	cm = commit
	pl = pull
	co = checkout
	br = branch
	logg = log --stat --decorate=short --pretty=format:'%C(yellow)%h %Cgreen%cr %Cblue%cn%Cred%d %Creset%s %C(cyan)%b'

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f

[push]	
	default = current

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
